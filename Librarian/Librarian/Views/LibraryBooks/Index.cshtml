@using System.Web.UI.WebControls
@model IEnumerable<Librarian.Models.LibraryBook>

@{
  ViewBag.Title = "List of Books";
}

<h2>List of Books</h2>

<p>
  @Html.ActionLink("Create New", "Create", new {id = ViewBag.LibraryId})
</p>
<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Book.Title)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.IsAvailable)
    </th>
    <th></th>
  </tr>
  
  @foreach (var item in Model)
    {
    <tr>
      <td>
        @*@Html.DisplayFor(modelItem => item.Book.Title)*@
        @Html.ActionLink(item.Book.Title, "Details", "Books", new { id = item.Id }, new {area = ""})
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.IsAvailable)
          @{
        if (item.IsAvailable)
        {
           
            @Html.ActionLink("Check out", "CheckOut", "Transaction",  new { id = item.Id },new { area = "" })
        }
        else
        {
            @Html.ActionLink("Check in", "CheckIn", "Transaction", new { id = item.Id }, new { area = "" })
        }
}
      </td>
      <td>
        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
      </td>
    </tr>
    }

</table>
